<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        tools:visibility="visible"
        android:visibility="gone"
        android:background="@color/Gray2"
        android:id="@+id/settingsContainer"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.settings.MySettingsFragment">

        <TextView
            android:id="@+id/changeIdTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unique id"
            android:textStyle="bold"
            android:backgroundTint="@color/white_msg"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>
        <TextView
            android:id="@+id/uniqueId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textSize="19sp"
            android:maxLines="1"
            android:layout_marginStart="4dp"
            android:ellipsize="end"
            android:text="change your unique id"

            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="6dp"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white_msg"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Notifications" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>
        <CheckedTextView
            android:id="@+id/vibrate_checked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMarkTint="@color/colorPrimary"
            android:checkMark="?android:attr/textCheckMark"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingLeft="5dp"

            android:text="Enable vibration on notifications"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <Switch
            android:id="@+id/sound_switch"
            android:layout_width="match_parent"
            android:layout_height="41dp"

            android:paddingEnd="10dp"
            android:paddingLeft="5dp"
            android:text="Sound on notification"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:backgroundTint="@color/white_msg"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="Time to ring/vibrate" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPrimary"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radio1"
                android:checked="true"
                android:text="5 sec">

            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radio2"
                android:text="10 sec" >

            </RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/radio3"
                android:text="20 sec">
            </RadioButton>
        </RadioGroup>



    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <FrameLayout
        android:id="@+id/frameLayout_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="18dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
